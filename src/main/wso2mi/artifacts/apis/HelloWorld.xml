<?xml version="1.0" encoding="UTF-8"?>
<api context="/HelloWorld" name="HelloWorld" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <enrich>
                <source clone="true" type="body"/>
                <target property="inputPayload" type="property"/>
            </enrich>
            <log level="custom">
                <property expression="$ctx:inputPayload" name="LOG-ATOMFEED-API-RECEIVED-PAYLOAD"/>
            </log>
            <log level="custom">
                <property expression="$body/invalid/xpath/expression" name="INVALID_XPATH"/>
            </log>
            <payloadFactory media-type="jsonerror">
                <format>{"Hello":"World"}</format>
                <args/>
            </payloadFactory>
            <respond/>
        </inSequence>
        <faultSequence>
            <log level="full">
                <property name="FAULT_MESSAGE" value="An exception occurred"/>
                <property name="ERROR_CODE" expression="get-property('ERROR_CODE')"/>
                <property name="ERROR_MESSAGE" expression="get-property('ERROR_MESSAGE')"/>
            </log>
            <respond/>
        </faultSequence>
    </resource>
</api>
